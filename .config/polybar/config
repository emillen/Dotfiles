[colors]
background = #1d2021
foreground = #ebdbb2
separator = #3c3836
purple = #b16286
yellow = #d79921
green = #98971a
blue = #458588
gray = #282828
red = #cc241d


[bar/bar]
monitor = ${env:MONITOR}
width = 100%
height = 20
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

border-size = 2
border-color = ${colors.background}

padding-left = 0
padding-right = 2

font-0 = "JetBrainsMono Nerd Font:style=Bold:size=10;2"
font-1 = "JetBrainsMono Nerd Font:style=Bold:size=10;1"
font-2 = "JetBrainsMono Nerd Font:style=Bold:size=10;1"
font-3 = "JetBrainsMono Nerd Font:style=Bold:size=10;1"

modules-left = i3
modules-center= separator date separator battery separator memory separator cpu separator
modules-right = separator pulseaudio separator bluetooth separator wlan separator wired separator powermenu

wm-restack = i3
override-redirect = false


[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
pin-workspaces = true

label-focused = %index%
label-focused-background = ${colors.gray}
label-focused-foreground = ${colors.yellow}
label-focused-padding = 3

label-unfocused = %index%
label-unfocused-padding = 3

label-visible = %index%
label-visible-padding = 3

label-separator-foreground = ${colors.separator}
label-separator = |

[module/wired]
type = internal/network
interface = enp2s0f0
interval = 3.0

format-connected = <ramp-signal> <label-connected> 
label-connected = %local_ip%
label-connected-foreground = ${colors.blue}

format-disconnected = <label-disconnected>
label-disconnected = 
label-disconnected-foreground = ${colors.purple}


ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 
ramp-signal-foreground = ${colors.purple}

[module/wlan]
type = internal/network
interface = wlp3s0
interval = 3.0

format-connected = <ramp-signal> <label-connected>
label-connected = %{A1:gnome-terminal -e nmtui &:} %essid%%{A}
label-connected-foreground = ${colors.blue}

label-disconnected = 睊

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 
ramp-signal-foreground = ${colors.purple}

[module/date]
type = internal/date
interval = 5

date = %Y-%m-%d
date-alt = " %Y-%m-%d"

time = %H:%M
time-alt = %H:%M:%S

format-prefix = " "
format-prefix-foreground = ${colors.purple}

label = %date% %time%

[module/cpu]
type = internal/cpu
interval = 5
warn-percentage = 95
label = CPU %percentage%%
label-warn-foreground = ${colors.red}

format-prefix = " "
format-prefix-foreground = ${colors.purple}


[module/memory]
type = internal/memory
interval = 5
label = RAM %percentage_used%%
label-warn-foreground = ${colors.red}
warn-percentage = 95
format-prefix = " "
format-prefix-foreground = ${colors.purple}

[module/battery]
type = internal/battery

full-at = 100
low-at = 10

poll-interval = 5

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
ramp-capacity-foreground = ${colors.purple}


animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-foreground = ${colors.purple}

animation-discharging-0 = 
animation-discharging-1 = 
animation-discharging-2 = 
animation-discharging-3 = 
animation-discharging-4 = 
animation-discharging-foreground = ${colors.purple}

format-discharging = <animation-discharging>  <label-discharging>
format-charging = <animation-charging>  <label-charging>
format-full = <ramp-capacity>  <label-full>
format-low = <ramp-capacity>  <label-low>

label-discharging = %percentage%%
