[module/bluetooth]
type = custom/script
exec = ~/.config/polybar/bluetooth.sh --list-devices
format-prefix = " "
format-prefix-foreground = ${colors.purple}
format-foreground = ${colors.blue}
label =  %output%  
click-left = i3-msg exec blueman-manager

[module/pulseaudio]
